{
  "name": "github-webhook-pr-reviewer",
  "version": "1.0.0",
  "description": "GitHub PR Webhook application to review and display PR information",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@octokit/core": "^5.0.2",
    "@octokit/plugin-rest-endpoint-methods": "^10.0.1",
    "@octokit/webhooks-types": "^7.6.1",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "openai": "^4.87.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "bun-types": "latest",
    "typescript": "^5.3.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
